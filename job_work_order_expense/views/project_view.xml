<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="job_work_project_form_view" model="ir.ui.view">
            <field name="name">Project Hr Expense</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button" string="Expenses" name="action_expense_view" type="object" icon="fa-money">
<!--                        <field string="Documents" name="doc_count" widget="statinfo"/>-->
                    </button>
                    <button class="oe_stat_button" string="Expense Sheets" name="action_expense_sheets_view" type="object" icon="fa-money">
<!--                        <field string="Documents" name="doc_count" widget="statinfo"/>-->
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
